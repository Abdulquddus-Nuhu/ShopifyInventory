@model IEnumerable<ShopifyInventory.Models.ItemModel>

@{
    ViewData["Title"] = "Deleted Items";
}

<h1>Deleted Items</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                S/No.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Deleted At
            </th>
            <th>
               Comments
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @{
            var counter = 1;
        }
@foreach (var item in Model) {
        <tr>
             <td>
                @counter
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletionComments)
            </td>
            <td>
               <form asp-action="Delete">
                   <a asp-action="UnDeleteItem" asp-route-id="@item.Id">Undelete</a> |
               </form>
                <a asp-action="PermanentDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
         counter++;
}
    </tbody>
</table>
